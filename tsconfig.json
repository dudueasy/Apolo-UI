{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "traceResolution": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "build",
    "*.js",
    "scripts",
    "jest"
  ]
}