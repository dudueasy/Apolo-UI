{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "module": "es6",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "traceResolution": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.js",
    "scripts",
    "jest"
  ],
  "awesomeTypescriptLoaderOptions": {
//    "silent": true
  }
}